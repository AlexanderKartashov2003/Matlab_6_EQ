            app.Gain9.Position = [863 326 3 263];

            % Create KHzLabel_4
            app.KHzLabel_4 = uilabel(app.UIFigure);
            app.KHzLabel_4.HorizontalAlignment = 'right';
            app.KHzLabel_4.FontName = 'Magneto';
            app.KHzLabel_4.FontSize = 9;
